{
  "name": "mint-express",
  "version": "0.1.0",
  "author": "Pankaj Sanam",
  "description": "A starter kit for creating modular RESTful APIs using Node, Express and Mongoose",
  "keywords": [
    "mint",
    "mint express",
    "boilerplate",
    "mern",
    "node",
    "nodejs",
    "express",
    "mongodb",
    "rest",
    "api",
    "backend"
  ],
  "main": "src/index.js",
  "repository": "https://github.com/pankajsanam/mint-express.git",
  "homepage": "https://github.com/pankajsanam/mint-express",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "npm run lint && jest -i --coverage",
    "start:prod": "pm2 start ecosystem.config.js --no-daemon",
    "test:watch": "jest --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "docker": "docker-compose -f docker-compose.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "lint:watch": "npm run lint --watch",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.2.3",
    "helmet": "^4.2.0",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "mongodb": "^3.6.3",
    "mongoose": "^5.10.15",
    "morgan": "^1.10.0",
    "node": "^14.5.0",
    "nodemailer": "^6.4.16",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pm2": "^4.5.0",
    "validator": "^13.1.17",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.6",
    "supertest": "^6.0.1"
  }
}
