{
  "name": "mern-api",
  "version": "0.1.0",
  "author": "Pankaj Sanam",
  "license": "MIT",
  "description": "A boilerplate for creating APIs with node, express and mongodb",
  "keywords": ["node", "node.js", "express", "express.js", "boilerplate", "mern", "mern api"],
  "repository": {
    "type": "git",
    "url": "https://github.com/pankajsanam/mern-api"
  },
  "homepage": "https://github.com/pankajsanam/mern-api",
  "scripts": {
    "start": "nodemon ./bin/www",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "lint:watch": "npm run lint --watch",
    "test": "npm run lint && jest --config ./jest.config.json --coverage",
    "test:watch": "jest --config ./jest.config.json --watch",
    "prepush": "npm run lint && npm test"
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "express-jwt": "^6.0.0",
    "jest": "^26.1.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.15",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.21",
    "node": "^14.5.0",
    "validator": "^13.1.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2"
  }
}
